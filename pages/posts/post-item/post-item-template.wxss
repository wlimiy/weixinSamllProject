
.post-author-date{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 10px;
  font-size: 26rpx;
}
.post-title{
  margin-left: 10px;
  margin-bottom: 10px;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.post-content{
  color:#666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right:20rpx;
  letter-spacing: 2rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  line-height: 16px;
  margin-left: 16px;
}
.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  font-size: 28rpx;
  color:#666;
  margin-right:8px;
}